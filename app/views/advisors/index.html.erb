<p id="notice"><%= notice %></p>

<h1>Advisors availability</h1>

<%= month_calendar advisors: @advisors do |day, advisors| %>
  <div><strong><%= day.to_s(:short) %></strong></div>
  <% advisors.each do |advisor| %>
  <div><%= link_to advisor.name, advisor %></div>
  <% end %>
<% end %>


<%= month_calendar do |date| %>
  <% if date < Date.today %>
  <% else %>
    <%= date.day %>
  <% end %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Recurring</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.name %></td>
        <td><%= advisor.date %></td>
        <td><%= advisor.recurring %></td>
        <td><%= advisor.start_time.strftime("%I:%M%p") %></td>
        <td><%= advisor.end_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'Show', advisor %></td>
        <td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
        <td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Advisor', new_advisor_path %>
